{
  "name": "headless-knight",
  "version": "1.1.3",
  "description": "无头骑士 - 通过 MCP 服务和 Slash Commands 调用 Claude Code、Gemini CLI、Codex CLI 等 AI CLI 工具的插件",
  "author": {
    "name": "LostAbaddon",
    "email": "lostabaddon@gmail.com",
    "url": "https://lostabaddon.github.io/"
  },
  "license": "MIT",
  "keywords": [
    "headless",
    "automation",
    "process-management",
    "claude-code",
    "gemini-cli",
    "codex-cli"
  ],
  "skills": "./skills/",
  "commands": "./commands/",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/lib/session-start.js"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/lib/on-input.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/lib/tool-start.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/lib/tool-end.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/lib/on-stop.js"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@upstash/context7-mcp"
      ],
      "env": {}
    },
    "runCLI": {
      "command": "node",
      "args": [
        "${CLAUDE_PLUGIN_ROOT}/mcp/cli-runner-server.js"
      ]
    }
  }
}
